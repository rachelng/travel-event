<h1>Events</h1>



	<% @events.each do |event| %>
	<div class="panel panel-default">
		
		<div class="panel-heading">
			<h3 class="panel-title"><%= formatted_datetime(event.concert_date) %></h3>
		</div>
		<div class="panel-body">
			<%= image_tag(event.artist_image_url, class: 'artist-image') %>
			<h2><%= event.artist %> at <%= event.venue %>, <%= event.location %></h2>
			<p><%= event.description %></p>
		</div>

		<iframe width="100%" height="100" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%= event.track_id %>&amp;auto_play=false&amp;hide_related=false&amp;visual=true"></iframe>
		
		</div>
	<% end %>
